<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title_events"
            android:text="@string/title_events"

            android:layout_marginTop="20dp"
            android:textSize="32dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|center_horizontal"
            />


        <ListView
            android:id="@+id/listView"
            android:layout_width="344dp"
            android:layout_height="288dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:dividerHeight="5.0sp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="156dp" />

        <Button
            android:id="@+id/btn_newEvent"
            android:layout_width="235dp"
            android:layout_height="67dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/darkBlue"
            android:text="@string/btn_newEvent"
            android:textSize="20dp" />

        <GridLayout
            android:layout_marginTop="20dp"
            android:layout_width="290dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="46dp"
            android:layout_gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/btn_friends"
                android:text="@string/btn_friends"
                android:backgroundTint="@color/darkBlue"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                />

            <Button
                android:id="@+id/btn_preferences"
                android:text="@string/btn_preferences"
                android:backgroundTint="@color/darkBlue"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                />

        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>